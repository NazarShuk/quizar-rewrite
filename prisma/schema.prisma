generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["new-quizar"]
}

model StudySet {
  id        String   @id @default(cuid())
  name      String
  authorId  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  terms     Term[]

  @@schema("new-quizar")
}

model Term {
  id         String    @id @default(cuid())
  term       String
  definition String
  studySetId String?
  StudySet   StudySet? @relation(fields: [studySetId], references: [id], onDelete: Cascade)

  @@schema("new-quizar")
}
