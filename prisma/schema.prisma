generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["new-quizar"]
}

model StudySet {
  id   String @id @default(cuid())
  name String

  terms Term[]

  authorId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@schema("new-quizar")
}

model Term {
  id String @id @default(cuid())

  term       String
  definition String
  StudySet   StudySet? @relation(fields: [studySetId], references: [id], onDelete: Cascade)
  studySetId String?

  @@schema("new-quizar")
}
